{
  "name": "plan-a23/modules",
  "description": "Organize your Plan A Code into modules using nwidart/laravel-modules",
  "keywords": [
    "Plan A",
    "laravel",
    "Plan A Modules",
    "Plan A"
  ],
  "homepage": "https://github.com/plan-a23/plana-modules",
  "support": {
    "issues": "https://github.com/plan-a23/plana-modules/issues",
    "source": "https://github.com/plan-a23/plana-modules"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Ahmed Eid",
      "email": "contact@plan-a.eu.org",
      "role": "Developer"
    },
    {
      "name": "Plan A",
      "email": "contact@plan-a.eu.org",
      "role": "Company"
    }
  ],
  "require": {
    "php": "^8.1|^8.2|^8.3",
    "filament/filament": "^3.0",
    "nwidart/laravel-modules": "^11.0",
    "spatie/laravel-package-tools": "^1.15.0"
  },
  "require-dev": {
    "laravel/pint": "^1.0",
    "nunomaduro/collision": "^8.1",
    "nunomaduro/larastan": "^2.0.1",
    "orchestra/testbench": "^9.0",
    "pestphp/pest": "^2.1",
    "pestphp/pest-plugin-arch": "^2.0",
    "pestphp/pest-plugin-laravel": "^2.0",
    "phpstan/extension-installer": "^1.1",
    "phpstan/phpstan-deprecation-rules": "^1.0",
    "phpstan/phpstan-phpunit": "^1.0",
    "spatie/laravel-ray": "^1.26"
  },
  "autoload": {
    "psr-4": {
      "Plan-a23\\Modules\\": "src/",
      "Plan-a23\\Modules\\Database\\Factories\\": "database/factories/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Plan-a23\\Modules\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "@clear",
      "@prepare",
      "@php ./vendor/bin/testbench package:discover --ansi"
    ],
    "analyse": "vendor/bin/phpstan analyse",
    "test": "vendor/bin/pest",
    "test-coverage": "vendor/bin/pest --coverage",
    "format": "vendor/bin/pint",
    "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
    "prepare": "@php vendor/bin/testbench package:discover --ansi",
    "build": "@php vendor/bin/testbench workbench:build --ansi",
    "serve": [
      "Composer\\Config::disableProcessTimeout",
      "@build",
      "@php vendor/bin/testbench serve"
    ],
    "lint": [
      "@php vendor/bin/pint",
      "@php vendor/bin/phpstan analyse"
    ]
  },
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "phpstan/extension-installer": true,
      "wikimedia/composer-merge-plugin": true
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Plan-a23\\Modules\\ModulesServiceProvider"
      ],
      "aliases": {
        "PlanaModules": "PlanaModules"
      }
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
